<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Detailproduct"
    android:background="#EDECED"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar_DetalProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D8CA1"
        >
        <Button
            android:id="@+id/btnUpdateProduct_DetailProduct"
            android:layout_gravity="right"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Sửa"
            android:background="@drawable/bg_button_normal"
            android:layout_marginRight="10dp"
            />
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            >
            <!--            Image product-->
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="240dp"
                android:layout_height="310dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:foreground="@drawable/bg_container_imageproduct">

                <ImageView
                    android:id="@+id/ivImageProduct_DetailProduct"
                    android:layout_width="230dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/icondowload" />
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvImageProduct_DetailProduct"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/bg_container_imageproduct"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="3"
                android:layout_marginHorizontal="5dp"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 like"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_button_normal"
                    android:drawableRight="@drawable/icon_like"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.4 Sao"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_button_normal"
                    android:drawableRight="@drawable/icon_start"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120 Comment"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_normal"
                    android:drawableRight="@drawable/icon_message"
                    />

            </LinearLayout>

            <!--            Name product-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#0E1C75"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="Tên sản phẩm"
                    android:textColor="#5C4E4E"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:rotationX="7"
                    app:cardElevation="7dp"
                    >

                    <TextView
                        android:id="@+id/tvNameProduct_DetailProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:background="@drawable/bg_container_imageproduct"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:text="demo" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

<!--            danh mục-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#0E1C75"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="Danh mục"
                    android:textColor="#5C4E4E"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:rotationX="7"
                    app:cardElevation="7dp"
                    >

                    <TextView
                        android:id="@+id/tvCategory_DetailProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:background="@drawable/bg_container_imageproduct"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:text="Điện thoại" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--                Hãng sản xuất-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#0E1C75"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="Hãng sản xuất"
                    android:textColor="#5C4E4E"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:rotationX="7"
                    app:cardElevation="7dp"
                    >

                    <TextView
                        android:id="@+id/tvManufacce_DetailProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:background="@drawable/bg_container_imageproduct"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:text="Apple" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!--                mô tả sản phẩm-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#0E1C75"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="Mô tả sản phẩm"
                    android:textColor="#5C4E4E"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:rotationX="7"
                    app:cardElevation="7dp"
                    >

                    <TextView
                        android:id="@+id/tvDescription_DetailProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_container_imageproduct"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:text="Văn bản được phát hành theo giấy phép giấy phép Creative Commons Ghi công – Chia sẻ tương tự; có thể áp dụng điều khoản bổ sung. Xem Điều khoản sử dụng để biết thêm thông tin." />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

<!--            giá cả sản phẩm-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#0E1C75"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="Giá sản phẩm"
                    android:textColor="#5C4E4E"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:rotationX="7"
                    app:cardElevation="7dp"
                    >

                    <TextView
                        android:id="@+id/tvPriveProduct_DetailProdcut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_container_imageproduct"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:gravity="right"
                        android:textStyle="bold|italic"
                        android:textColor="#F44336"
                        android:text="123 VND"
                        />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

<!--            Số lượng sản phẩm-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#0E1C75"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="Số lượng sản phẩm"
                    android:textColor="#5C4E4E"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:rotationX="7"
                    app:cardElevation="7dp"
                    >

                    <TextView
                        android:id="@+id/tvQuanlityProduct_DetailProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_container_imageproduct"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:gravity="right"
                        android:textStyle="bold|italic"
                        android:textColor="#F44336"
                        android:text="123"
                        />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>