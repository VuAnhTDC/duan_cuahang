<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar_ScreenHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--    Content screen home-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#000" />
        <!--    information shop include: avata, name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAvataShop_ScreenHome"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_avatashop"
                android:scaleType="centerCrop"
                android:src="@drawable/imgdemo" />

            <TextView
                android:id="@+id/txNameShop_ScreenHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thong's Shop"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#000" />

        <!--    status order form-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--            text lable status order form-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn hàng (Trạng thái)"
                android:textSize="30dp"
                android:textStyle="bold"
                android:paddingHorizontal="20dp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/tvBillHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem danh sách đơn đặt hàng"
                android:layout_gravity="end"
                android:paddingRight="20dp"
                android:drawableRight="@drawable/icon_chevron_right"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                >
               <FrameLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_marginRight="5dp"

                   >
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="100dp"
                       android:src="@drawable/cholayhang"
                       />
                   <Button
                       android:id="@+id/btnChoLayHang"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Chờ lấy hàng"
                       android:background="@drawable/bg_button_normal"
                       android:textStyle="bold"
                       android:textColor="@color/white"
                      android:layout_gravity="bottom"
                       />
               </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/huydonhang"
                        />
                    <Button
                        android:id="@+id/btnHuyDonHang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đơn bị hủy"
                        android:background="@drawable/bg_button_normal"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"
                        />

                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/danhgia"
                        />
                    <Button
                        android:id="@+id/btnDanhGia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đánh giá"
                        android:background="@drawable/bg_button_normal"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"
                        />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#000" />

<!--        Product-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >

<!--            Chờ lấy hàng-->
           <LinearLayout
               android:id="@+id/linearLayout_SanPhamCuaToi_ScreenHome"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:gravity="center"
               android:layout_marginTop="10dp"
               android:layout_weight="1"
               android:layout_marginRight="5dp"
               >
               <ImageView
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/product"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Sản phẩm của tôi"
                   android:textStyle="bold"
                  android:textColor="#000"
                   />
           </LinearLayout>

<!--            Hiệu quả bán hàng-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bieudo"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hiệu quả bán hàng"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />
            </LinearLayout>

<!--            Voucher-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/voucher"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voucher"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

<!--    Bottom navigation bar-->
</LinearLayout>